<% if @comment.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@comment) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :referring_link_id, :value => @referring_link_id %>
    <%= f.hidden_field :referring_comment_id, :value => @referring_comment_id %>
    <%= f.hidden_field :commentable_id, :value => @commentable_id %>
    <%= f.hidden_field :commentable_type, :value => @commentable_type %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <%= f.submit(:class => "btn btn-danger") %>
<% end %>
