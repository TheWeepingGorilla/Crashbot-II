<% if @link.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @link.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@link) do |f| %>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <%= f.submit(:class => "btn btn-danger") %>
<% end %>
